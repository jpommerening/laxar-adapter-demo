{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./",
    "paths": {
      "laxar": [ "./vendor/laxar" ],
      "laxar-types": [ "./vendor/laxar-angular2-adapter/types" ],
      "laxar-angular2-adapter": [ "./vendor/laxar-angular2-adapter" ]
    },
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "**/bower_components/*",
    "**/node_modules/*",
    "**/*-aot.ts"
  ]
}
